"""lib_imgproc - Image processing library"""

load("@rules_cc//cc:defs.bzl", "cc_library", "cc_test")
load("//tools/bazel:copts.bzl", "LE_COPTS")

package(default_visibility = ["//visibility:public"])

cc_library(
    name = "lib_imgproc",
    srcs = glob(
        [
            "src/*.cpp",
        ],
        allow_empty = True,
    ),
    hdrs = glob(
        [
            "include/imgproc/*.hpp",
            "include/imgproc/*.h",
            "include/imgproc/impl/*.hpp",
            "include/imgproc/impl/*.h",
            "src/*.h",
        ],
        allow_empty = True,
    ),
    copts = LE_COPTS,
    includes = [
        "include",
        "src",
    ],
    deps = [
        "//libs/geometry:lib_geometry",
        "//libs/utility:lib_utility",
        "@opencv",
        "@opencv//:photo",
    ],
)

# Tests
[
    cc_test(
        name = test_file[len("tests/"):-len(".cpp")],
        size = "small",
        srcs = [test_file],
        copts = LE_COPTS,
        deps = [
            ":lib_imgproc",
            "@googletest//:gtest",
            "@googletest//:gtest_main",
        ],
    )
    for test_file in glob(["tests/test_*.cpp"])
]
