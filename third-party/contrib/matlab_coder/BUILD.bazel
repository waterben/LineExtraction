        "-Wno-old-style-cast",
        "-Wno-conversion",
        "-Wno-sign-conversion",
        "-Wno-effc++",
        "-Wno-unused-parameter",
        "-Wno-unused-variable",
    ],
    includes = ["include"],
    visibility = ["//visibility:public"],
    deps = [
        "@opencv",
    ],
)
